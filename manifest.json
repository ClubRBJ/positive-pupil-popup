{
    "name": "Brewing Java",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "js/background.js"
    },
    "action":{
        "default_popup": "./html/button.html",
        "default_title": "Brewing Java"
    },

    "host_permissions": [
        "https://umich.instructure.com/*"
    ],
    "content_scripts": [
        {
            "matches": ["https://umich.instructure.com/*"],
            "js": ["js/content.js"]
        }
    ],
    "web_accessible_resources": [
        {
            "matches": ["<all_urls>"],
            "resources": [
                "./css/*",
                "./js/*"
            ]
        }
    ]
}
